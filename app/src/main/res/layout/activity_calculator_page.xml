<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kylelevydevgmail.weightcalculator.CalculatorPage">

    <GridLayout
        android:id="@+id/calculateGrid"
        android:layout_width="352dp"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/total_weight_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_column="2"
            android:layout_row="0"
            android:ems="10"
            android:hint="@string/enter_weight"
            android:inputType="numberDecimal"
            android:textAlignment="viewStart" />

        <TextView
            android:id="@+id/bar_options"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Bar Weight:"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <Button
            android:id="@+id/calculateButton"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="3"
            android:text="@string/calculate"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="243dp"
            tools:layout_editor_absoluteY="126dp" />

        <TextView
            android:id="@+id/weightEntered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/bar_weight_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:ems="10"
            android:hint="@string/enter_weight"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="157dp"
            android:layout_height="32dp"
            android:layout_column="0"
            android:layout_row="0"
            android:text="@string/total_weight"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

    </GridLayout>

    <TextView
        android:id="@+id/errorMessage"
        android:layout_width="350dp"
        android:layout_height="39dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="368dp"
        android:layout_height="254dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="204dp">

        <ToggleButton
            android:id="@+id/metaToggle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="ToggleButton" />

        <ToggleButton
            android:id="@+id/toggleOne"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="1"
            android:layout_row="0"
            android:text="ToggleButton"
            android:textOff="45"
            android:textOn="45" />

        <ToggleButton
            android:id="@+id/toggleTwo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="2"
            android:layout_row="0"
            android:text="ToggleButton" />

        <ToggleButton
            android:id="@+id/toggleThree"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="3"
            android:layout_row="0"
            android:text="ToggleButton" />

        <ToggleButton
            android:id="@+id/toggleFour"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="4"
            android:layout_row="0"
            android:text="ToggleButton" />

        <ToggleButton
            android:id="@+id/toggleFive"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="5"
            android:layout_row="0"
            android:text="ToggleButton" />

        <ToggleButton
            android:id="@+id/toggleSix"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_column="6"
            android:layout_row="0"
            android:text="ToggleButton" />
    </GridLayout>

</android.support.constraint.ConstraintLayout>